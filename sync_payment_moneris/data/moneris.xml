<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="payment_acquirer_moneris" model="payment.acquirer">
        <field name="name">Moneris</field>
        <field name="image_128" type="base64" file="sync_payment_moneris/static/src/img/moneris_icon.png"/>
        <field name="provider">moneris</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="module_id" ref="base.module_sync_payment_moneris"/>
        <field name="view_template_id" ref="moneris_acquirer_button"/>
        <field name="token_implemented">False</field>
        <field name="registration_view_template_id" ref="moneris_s2s_form"/>
        <field name="description" type="html">
            <p>
                Moneris Payment Services supports credit cards, debit cards.
            </p>
            <ul class="list-inline">
                <li><i class="fa fa-check"/>eCommerce</li>
                <li><i class="fa fa-check"/>Cards storage</li>
            </ul>
        </field>
        <field name="pre_msg"><![CDATA[
<p>You will be redirected to the Moneris website after clicking on the payment button.</p>]]></field>
    </record>
</odoo>
