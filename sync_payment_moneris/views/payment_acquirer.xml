<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form_moneris" model="ir.ui.view">
        <field name="name">acquirer.form.moneris</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'moneris')]}">
                    <group>
                        <field name="moneris_email_account" attrs="{'required': [('provider', '=', 'moneris'), ('state', '!=', 'disabled')]}"/>
                        <field name="moneris_seller_account" attrs="{'required': [('provider', '=', 'moneris'), ('state', '!=', 'disabled')]}"/>
                    </group>
                    <group>
                        <field name="store_id" attrs="{'required': [('provider', '=', 'moneris'), ('state', '!=', 'disabled')]}"/>
                        <field name="api_token" attrs="{'required': [('provider', '=', 'moneris'), ('state', '!=', 'disabled')]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="transaction_form_moneris" model="ir.ui.view">
        <field name="name">acquirer.transaction.form.moneris</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.transaction_form"/>
        <field name="arch" type="xml">
            <button name="action_void" position="attributes">
                <attribute name="states"/>
                <attribute name="attrs">{'invisible': [('state', '!=', 'done'), ('provider', '=', 'moneris')]}</attribute>
            </button>
            <xpath expr='//group[1]' position='after'>
                <notebook>
                    <page string="Moneris Details" attrs="{'invisible': [('provider','!=', 'moneris')]}">
                        <group>
                            <group>
                                <field name="cust_id"/>
                                <field name="receipt_id"/>
                                <field name="response_code"/>
                                <field name="cc_number"/>
                                <field name="expdate"/>
                                <field name="cardtype"/>
                            </group>
                            <group>
                                <field name="trans_time"/>
                                <field name="trans_date"/>
                                <field name="trans_id"/>
                                <field name="payment_type"/>
                                <field name="reference_num"/>
                                <field name="bank_approval_code"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
