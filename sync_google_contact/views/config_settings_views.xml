<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="settings_google_contact_sync_view_form" model="ir.ui.view">
            <field name="name">settings.google.contact.sync</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='integration']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" id="oauth">
                    <div class="o_setting_left_pane">
                        <field name="module_google_contacts"/>
                    </div>
                    <div class="o_setting_right_pane" name="google_contacts_right_pane">
                        <label string="Google Contacts" for="mod_google_contacts"/>
                        <div class="text-muted" id="google_contacts">
                            Synchronize your contacts with Google Contacts
                        </div>
                        <div class="content-group" attrs="{'invisible': [('module_google_contacts','=',False)]}">
                            <div class="mt16 row">
                                <label for="google_contacts_client_id" string="Google Client ID" class="col-xs-3 col-md-3 o_light_label"/>
                                <field name="google_contacts_client_id" nolabel="1" class="oe_inline"/>
                            </div>
                            <div class="mt16 row">
                                <label for="google_contacts_client_secret" string="Google Client Secret" class="col-xs-3 col-md-3 o_light_label"/>
                                <field name="google_contacts_client_secret" nolabel="1" password="True"  class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            </field>
      </record>

    </data>
</odoo>