<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_purchase_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.purchase.quote</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <div name="purchase_setting_container" position="after">
                <h2>Quotations Templates</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_website_purchase_quote"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_website_purchase_quote"/>
                            <div class="text-muted" id="purchase_config_website_purchasequote">
                                Allow to send online confirmation quote to vendor.
                            </div>
                            <div class="mt16">
                                <label for="po_template_id" class="o_light_label"/>
                                <field name="po_template_id" class="oe_inline"/>
                            </div>
                            <div>
                                <button name="%(website_purchase_quote.action_purchase_quotation_template)d" icon="fa-arrow-right" type="action" string="Quotation Templates" class="btn-link"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" id="purchase_config_online_confirmation">
                        <div class="o_setting_left_pane">
                            <field name="portal_po_confirmation"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="portal_po_confirmation"/>
                            <div class="text-muted">
                                Let your customers sign
                            </div>
                            <div class="content-group" attrs="{'invisible': [('portal_po_confirmation', '=', False)]}">
                                <div class="mt16">
                                    <field name="portal_po_confirmation_options" class="o_light_label" widget="radio"
                                        attrs="{'required': [('portal_po_confirmation', '=', True)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
